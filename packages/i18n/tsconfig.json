{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es2021",
		"module": "es2022",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./built/",
		"removeComments": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test/**/*"]
}
